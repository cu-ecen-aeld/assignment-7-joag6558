#!/bin/sh

set -e

case "$1" in
    start)
        echo "loading devices..."
	for i in /lib/modules/5.15.18/extra/*.ko
	do
	module="${i##*/}"
	    case "$module" in
		scull.ko)
		module="${module%.*}"
		    /etc/init.d/scull_load $module
		    ;;
		hello.ko)
		module="${module%.*}"
		    /etc/init.d/module_load $module
		    ;;
		faulty.ko)
		module="${module%.*}"
		    /etc/init.d/module_load $module
		    ;;
		*)
		    ;;
	    esac
	done
        ;;
    stop)
        echo "unloading devices..."
	for i in /lib/modules/5.15.18/extra/*.ko
	do
	module="${i##*/}"
	    case "$module" in
		scull.ko)
		module="${module%.*}"
		    /etc/init.d/scull_unload $module
		    ;;
		hello.ko)
		module="${module%.*}"
		    /etc/init.d/module_load $module
		    ;;
		faulty.ko)
		module="${module%.*}"
		    /etc/init.d/module_load $module
		    ;;
		*)
		    ;;
	    esac
	done
        ;;
    *)
        echo $"Usage: $0 {start|stop}"
        exit 1
        ;;
esac

exit $?
